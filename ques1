        }
    } while(choice != 8);
}

int main() {
    int mainChoice;
    
    cout << "===== LINKED LIST OPERATIONS PROGRAM =====\n";
    
    do {
        cout << "\n=== MAIN MENU ===\n";
        cout << "1. Circular Linked List Operations\n";
        cout << "2. Doubly Linked List Operations\n";
        cout << "3. Exit\n";
        cout << "Enter your choice: ";
        cin >> mainChoice;
        
        switch(mainChoice) {
            case 1:
                circularListMenu();
                break;
                
            case 2:
                doublyListMenu();
                break;
                
            case 3:
                cout << "Thank you for using the program. Goodbye!\n";
                break;
                
            default:
                cout << "Invalid choice! Please try again.\n";
        }
    } while(mainChoice != 3);
    
    return 0;
}
